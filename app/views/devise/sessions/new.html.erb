<%= render "shared/header" %>
  <h1 class="account-page__login">ログインしてください</h1>
  <div class='account-page__user-form'>
    <% if flash[:notice] || flash[:alert]%>
      <div id="error_explanation">
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
    <% end %>
    <%= form_with model: resource, as: resource_name, url: session_path(resource_name), local: true do |f|%>
      <div class='field'>
         <div class='field-label'>
           <%= f.label :メールアドレス%> 
         </div> 
          <div class='field-input'> 
          <%= f.email_field :email, autofocus: true%>
          </div>
      </div>
      
      <div class='field'>
        <div class='field-label'>
          <%= f.label :パスワード%>
          <i>(英数字6文字以上で記入してください)</i>
        </div>    
         <div class='field-input'>
          <%= f.password_field :password, autocomplete: "off"%>  
        </div>         
      </div>

     
      <div class = btn-all> 
      <div class='field-submit'>
          <div class='actions'>
            <%= f.submit "ログイン", class: 'btn'%>
          </div>
       </div>

      <%= render "devise/shared/links"%>
      <%= link_to "トップページに戻る", :back, class: 'btn'%>

       <div class='actions'>
           <%= link_to "ゲストログインはこちら", users_guest_sign_in_path, method: :post, class: 'btn'%>
       </div>  
      </div>
    <% end %>
  </div>  
<%= render "shared/footer" %>
