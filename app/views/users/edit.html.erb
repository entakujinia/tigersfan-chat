<%= render "shared/header" %>
<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>アカウント編集</h2>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'%>
      <%= link_to "前に戻る", :back, class: 'btn'%>
    </div>

   <div class='account-page__inner--right user-form'>
     <%= form_with model: current_user, local: true do |f|%> 

     <div class='field'>
        <div class='field-label'>
          <%= f.label :ニックネーム%>
         </div>
        <div class='field-input'>
           <%= f.text_field :nickname, maxlength:"15", autofocus: true%>
       </div>
     </div>

     <div class='field'>
        <div class='field-label'>
         <%= f.label :メールアドレス%>
        </div>
        <div class='field-input'>
         <%= f.email_field :email%>
        </div>
     </div>

     <div class='field'>
      <div class="field-label">
       <%= f.label :ファン歴%>
      </div>
      <div class='field-input'>
       <%= f.collection_select(:fan_history_id, FanHistory.all, :id, :name, {}, {class:"fan_history-select"}) %>
      </div>
     </div>   

     <div class='field'>
      <div class="field-label">
      <%= f.label :好きな選手%>
     </div>
     <div class='field-input'>
      <%= f.collection_select(:favorite_player_id, FavoritePlayer.all, :id, :name, {}, {class:"favorite_player-select"}) %>
     </div>   
     </div>
 
     <div class='field'>
      <div class='field-submit'>
        <div class='actions'>
         <%= f.submit "アカウント更新", class: 'btn'%>
       </div>
      </div>
     </div>
     
     <div class='field'>
      <div class='field-submit'>
        <div class='actions'>
        <%= link_to "アカウント削除", user_registration_path, method: :delete, class: 'btn', data: {confirm: "本当に削除してもよろしいですか？"}%>
       </div> 
      </div>   
     </div>      
    <% end %>
  </div>
</div>
<%= render "shared/footer" %>