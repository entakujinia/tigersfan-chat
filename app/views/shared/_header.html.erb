<header>
 <div class="header-contents">
   <div class="header-logo">
      <div class="header-title">
        <%= link_to "阪神タイガースを応援しよう！", root_path, method: :get %>
      </div>
    </div>
     <div class="header-container">
      <div class="header-container-contents">
        <ul>
          <% if user_signed_in? %>
          <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "logout" %></li>
          <li><%= link_to current_user.nickname, "#", class: "user-nickname"%></li>
          <% else %>
          <li><%= link_to "ログイン", new_user_session_path, class: "login" %></li>
              <%= link_to users_guest_sign_in_path, method: :post do %>
              ゲスト<br class="guest-btn">ログイン
            <% end %>
          </div>
          <% end %>
        </ul>          
      </div>
    </div>
  </div>
</header>
 
 